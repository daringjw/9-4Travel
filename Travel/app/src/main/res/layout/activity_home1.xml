<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <ImageView
            android:id="@+id/ivSun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/sun"/>

        <TextView
            android:id="@+id/tvCityWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ivSun"
            android:text="北京市\n晴\n32℃"/>


        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:text="李海峰"
            android:textSize="30px"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="20dp"
            android:text="2017.7.11,星期二"
            android:textSize="20px"/>


    </RelativeLayout>

    <com.jkkc.travel.view.MyImageView
        android:id="@+id/mivEmergency_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="matrix"
        android:src="@mipmap/emergency_contacts"/>

    <com.jkkc.travel.view.MyImageView
        android:id="@+id/mivMessageNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mivEmergency_contacts"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="matrix"
        android:src="@mipmap/message_notification"/>


    <TextView
        android:id="@+id/img_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/mivMessageNotification"
        android:layout_alignRight="@+id/mivMessageNotification"
        android:layout_below="@+id/mivSpotsSpeak"
        android:background="@mipmap/ic_point"
        android:gravity="right|top"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <com.jkkc.travel.view.MyImageView
        android:id="@+id/mivSpotsSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mivMessageNotification"
        android:layout_marginBottom="2dp"
        android:scaleType="matrix"
        android:src="@mipmap/spots_speak1"
        />


    <com.jkkc.travel.view.MyImageView
        android:id="@+id/mivMine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:scaleType="matrix"
        android:src="@mipmap/mine"/>

    <com.jkkc.travel.view.MyImageView
        android:id="@+id/mivMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mivMine"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="2dp"
        android:scaleType="matrix"
        android:src="@mipmap/maps"/>

    <com.jkkc.travel.view.MyImageView
        android:id="@+id/mivApHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mivMap"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="2dp"
        android:scaleType="matrix"
        android:src="@mipmap/ap_hot"/>

    <TextView
        android:id="@+id/tvMsgCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/mivMessageNotification"
        android:layout_alignRight="@+id/mivMessageNotification"
        android:layout_below="@+id/mivSpotsSpeak"
        android:background="@mipmap/ic_point"
        android:gravity="right|top"
        android:paddingEnd="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:text="2"
        android:textColor="@color/white"
        android:visibility="gone"/>


</RelativeLayout>