<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="6-21 7:44"
        />

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:background="@drawable/normal_bg">

        <ImageView
            android:id="@+id/img_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/img_no_urgency"/>

        <TextView
            android:id="@+id/tv_no_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_level"
            android:text="TextView"
            android:textStyle="bold"
            />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_no_city"
            android:src="@mipmap/img_location"/>

        <TextView
            android:id="@+id/tv_no_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="北京"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/news_bg">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="系统消息"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/notification_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notification_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:letterSpacing="0.1"
            android:lineSpacingMultiplier="1.2"
            android:text="消息内容"
            android:textColor="#666666"/>

    </RelativeLayout>


</LinearLayout>